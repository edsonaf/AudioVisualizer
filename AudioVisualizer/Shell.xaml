<Window x:Class="AudioVisualizer.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:inf="clr-namespace:AudioVisualizer.Infrastructure"
        xmlns:local="clr-namespace:AudioVisualizer"
        xmlns:prism="http://prismlibrary.com/"
        Title="Audio Visualizer"
        Width="525"
        Height="375">

  <Window.Icon>resources\Alecive-Flatwoken-Apps-Volume-Soundsettings.ico</Window.Icon>

  <Grid>
    <Grid.Background>
      <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="15" Color="{Binding ThemeColor}" />
        <GradientStop Color="#FF2D2D30" />
      </LinearGradientBrush>
    </Grid.Background>

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Border Grid.Row="0">
      <ContentControl x:Name="AudioControl" prism:RegionManager.RegionName="{x:Static inf:RegionNames.AudioControlRegion}" />
    </Border>
    <Border Grid.Row="1" Margin="4,4,4,4">
      <ContentControl x:Name="Visualizer" HorizontalAlignment="Center" prism:RegionManager.RegionName="{x:Static inf:RegionNames.VisualizerRegion}" />
    </Border>
  </Grid>
</Window>
