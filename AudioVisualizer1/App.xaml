<Application x:Class="AudioVisualizer1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:AudioVisualizer1.MVVM.ViewModel"
             xmlns:view="clr-namespace:AudioVisualizer1.MVVM.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <view:HomeView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:AudioControlViewModel}">
            <view:AudioControlView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:VisualizerViewModel}">
            <view:VisualizerView />
        </DataTemplate>
    </Application.Resources>
</Application>