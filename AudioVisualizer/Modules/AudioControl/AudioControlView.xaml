<UserControl
  x:Class="AudioVisualizer.Modules.AudioControl.AudioControlView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:AudioVisualizer.Modules.AudioControl" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <GroupBox
      Grid.Row="0" Margin="4,4,4,4"
      Foreground="White" Header="Audio Devices">
      <Grid>

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ComboBox
          Grid.Column="0" MinWidth="180"
          IsEnabled="{Binding ComboboxEnabled}"
          ItemsSource="{Binding CaptureDevices}"
          SelectedItem="{Binding SelectedDevice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button
          Grid.Column="1" MinWidth="60"
          Margin="4,0,0,0"
          Command="{Binding EnableCommand}"
          Content="{Binding OnOffButtonText}" />
      </Grid>
    </GroupBox>

    <StackPanel
      Grid.Row="1" Grid.Column="0"
      Margin="0,4,0,0">
      <Label
        HorizontalAlignment="Center" Content="Device Volume"
        Foreground="White" />
      <ProgressBar
        Name="Level" Height="15"
        HorizontalAlignment="Stretch"
        Foreground="{Binding ThemeColor}"
        Maximum="1" Minimum="0"
        Value="{Binding Level, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>



  </Grid>
</UserControl>
