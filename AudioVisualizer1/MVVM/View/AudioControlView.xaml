<UserControl x:Class="AudioVisualizer1.MVVM.View.AudioControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AudioVisualizer1.MVVM.View"
             xmlns:viewModel="clr-namespace:AudioVisualizer1.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModel:AudioControlViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0"
                  Margin="4,4,4,4"
                  Foreground="White"
                  Header="Audio Devices">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                          MinWidth="180"
                          IsEnabled="{Binding ComboboxEnabled}"
                          ItemsSource="{Binding CaptureDevices}"
                          SelectedItem="{Binding SelectedDevice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Grid.Column="1"
                        MinWidth="60"
                        Margin="4,0,0,0"
                        Command="{Binding StartCommand}"
                        Content="{Binding OnOffButtonText}" />
            </Grid>
        </GroupBox>

