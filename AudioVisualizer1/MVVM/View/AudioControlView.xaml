        <!--         <TextBlock -->
        <!--             Text="{Binding Spotify.CurrentTrack.TrackResource.Name, UpdateSourceTrigger=PropertyChanged}" /> -->
        <!--     </StackPanel> -->
        <!-- </GroupBox> -->

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,4,0,0">
            <Label HorizontalAlignment="Center" Content="Device Volume" Foreground="White" />
            <ProgressBar Name="Level"
                         Height="15"
                         HorizontalAlignment="Stretch"
                         Foreground="{Binding ColorRetriever.ThemeColor, UpdateSourceTrigger=PropertyChanged}"
                         Maximum="1"
                         Minimum="0"
                         Value="{Binding Level, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
        </StackPanel>

        <ContentPresenter Grid.Row="2" Content="{Binding AudioBars}"></ContentPresenter>

    </Grid>
</UserControl>